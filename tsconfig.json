{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES6",
    "lib": ["es2017", "DOM"], // <--- Add this line for promise identification
    "outDir": "./",
    "rootDir": "./",
    "sourceMap": false, // <--- make this true if you want to debug
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["chrome"], // to let TS know about chrome types
  },
  "exclude": ["node_modules"]
}
