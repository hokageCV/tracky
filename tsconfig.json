{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "lib": ["es6", "DOM"], // <--- Add this line for promise identification
    "outDir": "./",
    "rootDir": "./",
    "sourceMap": false, // <--- make this true if you want to debug
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": ".", // Root directory for imports
    "paths": {
      "@/*": ["*"],
    }
  },
  "exclude": ["node_modules"]
}
